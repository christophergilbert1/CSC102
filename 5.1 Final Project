    <script>
        // Shows the selected section and hide others
        function showSection(sectionId) {
            // Select all page sections
            const sections = document.querySelectorAll('.page-section');
            sections.forEach(section => {
                section.style.display = section.id === sectionId ? 'block' : 'none';
            });

            // Gets the info for the home link
            const homeLinkContainer = document.getElementById('homeLinkContainer');
            // If the current section is not home and the home link is not already present it will add the home button 
            if (sectionId !== 'home' && !homeLinkContainer.querySelector('a')) {
                const homeLink = document.createElement('a');
                homeLink.href = 'javascript:showSection(\'home\')';
                homeLink.textContent = 'Home';
                homeLinkContainer.appendChild(homeLink);
                homeLinkContainer.appendChild(document.createElement('br'));
            }
            // If the current section is home it will remove the home button
            if (sectionId === 'home') {
                homeLinkContainer.innerHTML = '';
            }
        }

        // Lwill show the landing (home) as first page
        showSection('home');

        // conditons for the game 
        let timeLeft = 10;
        let score = 0;
        let timerInterval;

        // Button to start the game
        function startGame() {
            // Reset game 
            timeLeft = 10;
            score = 0;
            document.getElementById('score').innerHTML = `Score: ${score}`;
            document.getElementById('timer').innerHTML = `Time: ${timeLeft}`;
            document.getElementById('gameButton').disabled = false;
            // Starts the countdown timer
            timerInterval = setInterval(countdown, 1000);
        }

        // handles the countdown timer
        function countdown() {
            timeLeft--;
            document.getElementById('timer').innerHTML = `Time: ${timeLeft}`;
            if (timeLeft <= 0) {
                // Stop the game when the timer reaches 0
                clearInterval(timerInterval);
                document.getElementById('gameButton').disabled = true;
                alert(`Game over! Your score is ${score}.`);
            }
        }

        // able to handle and count the button clicked for the game
        function clickButton() {
            score++;
            document.getElementById('score').innerHTML = `Score: ${score}`;
        }

        // checks if a string is a palindrome
        function checkPalindrome() {
            // Gets the user input
            var userInput = document.getElementById('userInput').value.trim().toLowerCase();
            // Reverse the string
            var reversedStr = userInput.split('').reverse().join('');
            // Checks if the input is a palindrome
            if (userInput === reversedStr) {
                document.getElementById('result').innerHTML = "It's a palindrome!";
            } else {
                document.getElementById('result').innerHTML = "It's not a palindrome.";
            }
        }

        // validates user input
        function validateUserInput() {
            // Get the user info
            var firstName = document.getElementById('firstName').value.trim();
            var lastName = document.getElementById('lastName').value.trim();
            var zipCode = document.getElementById('zipCode').value.trim();

            // Combine the first and last names
            var fullName = firstName + " " + lastName;

            // Validate the full name length
            if (fullName.length > 20) {
                document.getElementById('warning').innerHTML = "Full name cannot exceed 20 characters.";
                return;
            }

            // Validate the zip code format
            if (!/^\d{5}$/.test(zipCode)) {
                document.getElementById('warning').innerHTML = "Zip code must be 5 digits.";
                return;
            }

            // If validation passes, show a success message
            document.getElementById('warning').innerHTML = "Input is valid!";
        }
    </script>
