<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chris's Casino - Craps Game</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            background-color: #f0f0f0;
            margin: 0;
            padding: 20px;
        }
        
        h1 {
            color: #333;
        }
        
        button {
            padding: 10px 20px;
            font-size: 16px;
            margin-top: 20px;
            cursor: pointer;
        }

        #gameResult {
            margin-top: 20px;
            font-size: 18px;
            color: #444;
        }
        
        strong {
            color: #d9534f;
        }
    </style>
    <script>

        function playCraps() {

            const die1 = Math.floor(Math.random() * 6) + 1;
            const die2 = Math.floor(Math.random() * 6) + 1;

            const sum = die1 + die2;

            const resultDiv = document.getElementById("gameResult");


            if (sum === 7 || sum === 11) {

                resultDiv.innerHTML = `You rolled ${die1} and ${die2}. Sum is ${sum}. <strong>CRAPS - You lose!</strong>`;
            } else if (die1 === die2 && die1 % 2 === 0) {

                resultDiv.innerHTML = `You rolled ${die1} and ${die2}. Sum is ${sum}. <strong>You won!</strong>`;
            } else {

                resultDiv.innerHTML = `You rolled ${die1} and ${die2}. Sum is ${sum}. <strong>You pushed!</strong>`;
            }
        }


        document.addEventListener("DOMContentLoaded", function() {
            document.getElementById("playButton").addEventListener("click", playCraps);
        });
    </script>
</head>
<body>

    <h1>Welcome to Chris's Casino - Craps Game!</h1>

    <button id="playButton">Roll Dice</button>

    <div id="gameResult"></div>
</body>
</html>
